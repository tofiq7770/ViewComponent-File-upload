@using Fiorello.ViewModels.Categories
@model CategoryCreateVM


<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Category</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label asp-for="Name" >Name</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                    <span  class="text-danger mt-2" asp-validation-for="Name"></span>
                </div>
                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                <a class="btn btn-light" asp-area="Admin" asp-controller="Category" asp-action="Index">Back</a>
            </form>
        </div>
    </div>
</div>